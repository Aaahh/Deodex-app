#!/bin/bash
#
# Script to deodex all apps

# Aaahh - 7/15
#

NC='\033[0m'
YELLOW='\033[0;33m'

echo -e ${YELLOW}Apps${NC}
cd system/app
for i in $(ls -d */); do cd ~/deodex-app; ~/deodex-app/deodex-app -a ${i%%/}; done

echo -e ${YELLOW}Priv-apps${NC}
cd system/priv-app
for i in $(ls -d */); do cd ~/deodex-app; ~/deodex-app/deodex-app -a ${i%%/}; done
